# API Configuration
# Development: http://localhost:3000/api
# Production: https://take-backend-production.up.railway.app/api
VITE_API_BASE_URL=https://take-backend-production.up.railway.app/api

# Authentication
VITE_AUTH_ENDPOINT=/auth/login
VITE_REFRESH_TOKEN_ENDPOINT=/auth/refresh

# Environment
VITE_APP_ENV=production
VITE_APP_NAME=TakeDash

# Optional: External services
VITE_UPLOAD_URL=https://take-backend-production.up.railway.app/api/upload

# Demo mode (bypass authentication)
VITE_DEMO_MODE=false
VITE_USE_MOCK_DATA=false